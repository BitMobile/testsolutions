	StyleSheet="DynamicContainers_VerticalLayout.css">
	<c:VerticalLayout Id="vl">
		<c:Button Text="Back" OnClick="$DoBack()" OnEvent="Back" />
		<c:Button Text="append" OnClick="$Append()" />
		<c:Button Text="prepend" OnClick="$Prepend()" />
		<c:Button Text="after" OnClick="$After()" />
		<c:Button Text="before" OnClick="$Before()" />
		<c:Button Text="remove from start" OnClick="$RemoveFromStart()" />
		<c:Button Text="remove from finish" OnClick="$RemoveFromFinish()" />
		<c:VerticalLayout Id="layout" CssClass="root">
			<c:HorizontalLine Id="anchor" CssClass="anchor"/>
		</c:VerticalLayout>
	</c:VerticalLayout>
